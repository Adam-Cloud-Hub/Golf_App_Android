<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Golf_App.Views.SelectGame"
             BackgroundColor="#132132"
             Shell.NavBarIsVisible="False">


    <ContentPage.Content>
        <ListView x:Name="lv_courses" ItemTapped="lv_Courses_SelectionChanged" SelectionMode="Single" Background="#323045">

            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Path=CourseName}" TextColor="White"/>
                </DataTemplate>
            </ListView.ItemTemplate>




        </ListView>
        
        

    </ContentPage.Content>

</ContentPage>