<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Golf_App.Views.SelectGame"
             BackgroundColor="#132132"
             Shell.NavBarIsVisible="False">

    <ContentPage.Content>

        <Grid>                     
            
            <ListView x:Name="lv_courses" ItemSelected="lv_courses_ItemSelected" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Path=CourseName}" TextColor="White"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackLayout HorizontalOptions="Center" VerticalOptions="End" Margin="0,0,0,50">
                <Button Text="Play Game" Clicked="bt_load_game_Click" Style="{StaticResource TestButton2}"/>
            </StackLayout>


        </Grid>
        
    </ContentPage.Content>



        

</ContentPage>